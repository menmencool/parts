<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ed_login_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ed_login_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:textSize="30px" />


    <EditText
        android:id="@+id/ed_login_pwd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_login"
        android:layout_alignStart="@+id/ed_login_id"
        android:layout_marginBottom="90dp"
        android:hint="请输入验证码"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        android:textSize="30px" />

    <Button
        android:id="@+id/iv_login_pwd"
        android:layout_width="170px"
        android:layout_height="50px"
        android:layout_alignBottom="@+id/ed_login_pwd"
        android:layout_alignEnd="@+id/bt_login"
        android:background="@null"
        android:layout_marginBottom="10dp"
        android:text="获取验证码"
        android:textSize="15dp" />


    <Button
        android:id="@+id/bt_login"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:text="登录"
        android:textSize="18dp" />
</com.zhy.autolayout.AutoRelativeLayout>
