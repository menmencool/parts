<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <View style="@style/view_di" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true">

            <View style="@style/view_shu" />

            <TextView
                style="@style/tx_type"
                android:layout_centerInParent="true"
                android:text="配件详情"
                android:textStyle="bold" />

            <View
                style="@style/view_shu"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View style="@style/view_di" />

        <LinearLayout style="@style/ll_kuang">

            <View style="@style/view_shu" />

            <TextView
                style="@style/tx_type"
                android:text="配件名称" />

            <View style="@style/view_shu" />

            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    style="@style/view_shu"
                   android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_hollesi_part_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" " />

            </RelativeLayout>
        </LinearLayout>

        <View style="@style/view_di" />

        <LinearLayout style="@style/ll_kuang">

            <View style="@style/view_shu" />

            <TextView
                style="@style/tx_type"
                android:text="购买价格" />

            <View style="@style/view_shu" />

            <TextView
                android:id="@+id/tv_hollesi_purchase_price"
                style="@style/tv_neirong"
                android:text=" " />

            <View style="@style/view_quanzhong" />

            <View style="@style/view_shu" />
        </LinearLayout>

        <View style="@style/view_di" />

        <LinearLayout style="@style/ll_kuang">

            <View style="@style/view_shu" />

            <TextView
                style="@style/tx_type"
                android:text="卖出价格" />

            <View style="@style/view_shu" />

            <TextView
                android:id="@+id/tv_hollesi_sale_price"
                style="@style/tv_neirong"
                android:text=" " />

            <View style="@style/view_quanzhong" />

            <View style="@style/view_shu" />
        </LinearLayout>

        <View style="@style/view_di" />

        <LinearLayout style="@style/ll_kuang">

            <View style="@style/view_shu" />

            <TextView
                style="@style/tx_type"
                android:text="修改时间" />

            <View style="@style/view_shu" />

            <TextView
                android:id="@+id/tv_hollesi_last_modified_time"
                style="@style/tv_neirong"
                android:text=" " />

            <View style="@style/view_quanzhong" />

            <View style="@style/view_shu" />
        </LinearLayout>

        <View style="@style/view_di" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true">

            <View style="@style/view_shu" />

            <TextView
                android:id="@+id/tv_hollesi_create_time"
                style="@style/tx_type"
                android:layout_centerInParent="true"
                android:text=" "
                android:textStyle="bold" />

            <View
                style="@style/view_shu"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View style="@style/view_di" />

        <LinearLayout style="@style/ll_kuang">

            <View style="@style/view_shu" />

            <TextView
                style="@style/tx_type"
                android:text="品牌名称" />

            <View style="@style/view_shu" />

            <TextView
                android:id="@+id/tv_hollesi_breand_name"
                style="@style/tv_neirong"
                android:text=" " />

            <View style="@style/view_quanzhong" />

            <View style="@style/view_shu" />
        </LinearLayout>

        <View style="@style/view_di" />

        <LinearLayout style="@style/ll_kuang">

            <View style="@style/view_shu" />

            <TextView
                style="@style/tx_type"
                android:text="配件编号" />

            <View style="@style/view_shu" />

            <TextView
                android:id="@+id/tv_hollesi_part_code"
                style="@style/tv_neirong"
                android:text=" " />

            <View style="@style/view_quanzhong" />

            <View style="@style/view_shu" />
        </LinearLayout>

        <View style="@style/view_di" />

    </LinearLayout>

    <include layout="@layout/include_title" />
</RelativeLayout>